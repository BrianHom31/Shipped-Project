
<h1>new page for boats</h1>

<%= form_for Boat.new do |f| %>
  <%= f.label "Name of boat" %>:
  <%= f.text_field :name %><br><br>

  <%= f.label "Number of Containers" %>:
  <%= f.text_field :containers %><br><br>

  <%= f.label "current location" %>
  <%= f.select :location, ["Bermuda", "India", "Miami", "New York City", "Panama", "Trinidad", "Hong Kong", "Thailand", "London", "Australia", "Fiji"], prompt: :select %><br><br>

  <%= f.label :company %>
  <%= f.collection_select :company_id, Company.all, :id, :email %><br><br>

<center><%= f.file_field :avatar %>
  <br>

  <%= f.submit "Submit New Boat"%>
<% end %>



<h1>Edit boat</h1>

<%= form_for @boat do |f| %>
  <%= f.label :name %>:<br>
  <%= f.text_field :name %> <br><br>

  <%= f.label :containers %>:<br>
  <%= f.text_field :containers %> <br><br>

  <%= f.label "current location" %><br>
  <%= f.select :location, ["Bermuda", "India", "Miami", "New York City", "Panama", "Trinidad", "Hong Kong", "Thailand", "London", "Australia", "Fiji"], prompt: :select %><br><br>

  <%= f.label :company %>: <br>
  <%= f.collection_select :company_id, Company.all, :id, :name %>

  <br><br>
  <center><%= f.file_field :avatar %><br>

  <%= f.submit %>
<% end %>
